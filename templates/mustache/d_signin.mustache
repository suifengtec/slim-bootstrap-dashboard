<!DOCTYPE html>
<html lang="zh-CN">
{{>head }}
<body class="bg-dark">
  <div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">登录</div>
      <div class="card-body">
        <form id="signin-form" method="post" action="{{ url_signin_handler }}">
          <div class="form-group">
            <label for="exampleInputEmail1">电邮地址</label>
            <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" placeholder="请输入电邮地址">
          </div>
          <div class="form-group">
            <label for="exampleInputPassword1">密码</label>
            <input class="form-control" id="exampleInputPassword1" type="password" placeholder="请输入密码">
          </div>
          <div class="form-group">
            <div class="form-check">
              <label class="form-check-label">
                <input class="form-check-input" type="checkbox"> 记住密码</label>
            </div>
          </div>
          <button class="btn btn-primary btn-block"  type="submit">登录</button>
        </form>
        <div class="text-center">
          <a class="small mt-3" href="{{url_signup }}">注册</a>
          <a class="small" href="{{ url_forgot_password  }}">忘记密码?</a>
        </div>
      </div>
    </div>
  </div>
  <!-- Bootstrap core JavaScript-->
  <script src="./../../assets/vendor/jquery/jquery.min.js"></script>
  <script src="./../../assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- Core plugin JavaScript-->
  <script src="./../../assets/vendor/jquery-easing/jquery.easing.min.js"></script>
</body>

</html>
